<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.owner.OwnerRestaurantPage">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="@+id/tvTitle"
        app:layout_constraintEnd_toStartOf="@+id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvTitle"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lobster_regular"
        android:text="@string/dinewise_owner_restaurant"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="40sp"
        android:layout_marginTop="20dp" />

    <ImageView
        android:id="@+id/imgNotification"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:layout_constraintBottom_toBottomOf="@+id/tvTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvTitle"
        app:layout_constraintTop_toTopOf="@+id/tvTitle"
        app:srcCompat="@drawable/notification" />

    <ImageButton
        android:id="@+id/btnLogOut"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/imgNotification"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgNotification"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/log_out_user"
        android:background="@drawable/button_image_background_transparent"
        android:scaleType="centerInside"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="25dp"/>

    <ImageView
        android:id="@+id/imRestaurant"
        android:layout_width="360dp"
        android:layout_height="200dp"
        android:scaleType="fitXY"
        android:background="@drawable/custom_border"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="25dp"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle"
        android:layout_marginTop="30dp"
        />

    <TextView
        android:id="@+id/tvTitleNameRestaurant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="15dp"
        android:fontFamily="@font/kanit_medium"
        android:shadowColor="@color/teal"
        android:shadowRadius="4"
        android:text="@string/restaurant_name"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@+id/imRestaurant"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/tvRangePrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/kanit_light"
        android:gravity="center"
        android:text="@string/price"
        android:textColor="@color/teal"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/tvTitleNameRestaurant"
        app:layout_constraintStart_toEndOf="@+id/tvTitleNameRestaurant"
        app:layout_constraintTop_toTopOf="@+id/tvTitleNameRestaurant"
        android:layout_marginLeft="20dp"
        />

    <ImageView
        android:id="@+id/imRating"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:scaleType="centerInside"
        android:background="@drawable/button_image_background_transparent"
        app:srcCompat="@drawable/stars"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@+id/tvTitleNameRestaurant"
        />

    <TextView
        android:id="@+id/tvRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/kanit_light"
        android:gravity="center"
        android:text="@string/rating"
        android:textColor="@color/teal"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/imRating"
        app:layout_constraintStart_toEndOf="@+id/imRating"
        app:layout_constraintTop_toTopOf="@+id/imRating"
        android:layout_marginLeft="10dp"
        />

    <TextView
        android:id="@+id/tvReview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/kanit_light"
        android:gravity="center"
        android:text="@string/reviews"
        android:textColor="@color/teal"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/tvRating"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvRating"
       android:layout_marginRight="40dp"
        />

    <TextView
        android:id="@+id/tvWebsite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/kanit_light"
        android:gravity="center"
        android:text="@string/visit_website"
        android:textStyle="bold"
        android:textColor="@color/teal"
        android:textSize="20sp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imRating"
        android:layout_marginRight="40dp"
        />

    <ImageButton
        android:id="@+id/imBtnWebsite"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="centerInside"
        android:background="@drawable/button_image_background_transparent"
        app:srcCompat="@drawable/website_resto"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="50dp"
        app:layout_constraintTop_toBottomOf="@+id/tvWebsite"
        />

    <TextView
        android:id="@+id/tvMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/kanit_light"
        android:gravity="center"
        android:text="@string/menu"
        android:textStyle="bold"
        android:textColor="@color/teal"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/tvWebsite"
        app:layout_constraintStart_toEndOf="@+id/tvWebsite"
        app:layout_constraintTop_toTopOf="@+id/tvWebsite"
        android:layout_marginLeft="60dp"
        />

    <ImageButton
        android:id="@+id/imBtnMenu"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:scaleType="centerInside"
        android:background="@drawable/button_image_background_transparent"
        app:srcCompat="@drawable/menu"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="140dp"
        app:layout_constraintTop_toBottomOf="@+id/tvMenu"
        />

    <TextView
        android:id="@+id/tvReserve"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/kanit_light"
        android:gravity="center"
        android:text="@string/reserve"
        android:textStyle="bold"
        android:textColor="@color/teal"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/tvMenu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvMenu"
        android:layout_marginRight="40dp"
        />

    <ImageButton
        android:id="@+id/imBtnReserve"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:scaleType="centerInside"
        android:background="@drawable/button_image_background_transparent"
        app:srcCompat="@drawable/reserve_now"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="280dp"
        app:layout_constraintTop_toBottomOf="@+id/tvReserve"
        />

    <TextView
        android:id="@+id/tvLocationContact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/kanit_light"
        android:gravity="center"
        android:text="@string/location_and_contact"
        android:textColor="@color/teal"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imBtnWebsite"
        android:layout_marginRight="40dp"
        />
    <TextView
        android:id="@+id/tvLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/kanit_light"
        android:gravity="center"
        android:text="@string/location"
        android:textColor="@color/teal"
        android:textSize="20sp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvLocationContact"
        android:layout_marginRight="40dp"
        />

    <ImageView
        android:id="@+id/imContact"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="centerInside"
        android:background="@drawable/button_image_background_transparent"
        app:srcCompat="@drawable/phone"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@+id/tvLocation"
        />

    <TextView
        android:id="@+id/tvContact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/kanit_light"
        android:gravity="center"
        android:text="@string/contact"
        android:textColor="@color/teal"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/imContact"
        app:layout_constraintStart_toEndOf="@+id/imContact"
        app:layout_constraintTop_toTopOf="@+id/imContact"
        android:layout_marginLeft="10dp"
        />

    <View
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="@color/teal"
        app:layout_constraintBottom_toTopOf="@+id/bottom_navigation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:menu="@menu/bottom_menu_owner"
        app:labelVisibilityMode="labeled"
        app:itemIconTint="@color/teal"
        app:itemTextColor="@color/teal"
        app:itemIconSize="60dp" />

</androidx.constraintlayout.widget.ConstraintLayout>